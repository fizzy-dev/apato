<script>
    $("#signUpForm").submit(function (e) {
        e.preventDefault();
        $.ajax({
            url: '/api/v1/users',
            type: 'post',
            data: {
                email: $("#signUpEmail").val(),
                password: $("#signUpPassword").val(),
                firstName: $("#signUpFirstName").val(),
                lastName: $("#signUpLastName").val(),
                isAdmin: 0
            },
            beforeSend: function () {
                $("#signUpLoader").show();
            },
            success: function (res) {
                $("#signUpLoader").hide();
                $("#signUpModal").modal('hide');
                $("#successModal").modal('show');
            },
            error: function (xhr) {
                $("#signUpLoader").hide();
            }
        });
    });
    $("#signInForm").submit(function (e) {
        e.preventDefault();
        $.ajax({
            url: '/api/v1/users/sessions',
            type: 'post',
            data: {
                email: $("#signInEmail").val(),
                password: $("#signInPassword").val()
            },
            beforeSend: function () {
                $("#signInLoader").show();
            },
            success: function (res) {
                $("#signInLoader").hide();
                $("#signInModal").modal('hide');
                window.location.reload();
            },
            error: function (xhr) {
                $("#signInLoader").hide();
            }
        });
    });
    function logout() {
        $.ajax({
            url: '/api/v1/users/sessions',
            type: 'delete',
            beforeSend: function () {
                $("#signOutLoader").show();
            },
            success: function (res) {
                $("#signOutLoader").hide();
                window.location.replace('/');
            },
            error: function (xhr) {
                $("#signOutLoader").hide();
            }
        });
    }
</script>